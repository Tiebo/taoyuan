
.container {
		flex-direction: column;
		height: 100vh;
		padding-top: 20rpx;
		background-color: #f5f5f5;
}
.logo {
		width: 100px;
		height: 100px;
		background-color: #fff;
		border-radius: 50%;
		margin-bottom: 20px;
		box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}
.form {
		display: flex;
		flex-direction: column;
		justify-content: center;
		background-color: #ffffff;
		padding: 20px;
		border-radius: 4px;
		box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}
.input-group {
		display: flex;
		flex-direction: row;
		align-items: center;
		justify-content: center;
		margin-bottom: 20px;
}
.input-group label {
		width: 30%;
		font-size: 16px;
}
.input {
		width: 80%;
		height: 40px;
		border: 1px solid #ccc;
		border-radius: 4px;
		padding: 0 10px;
		font-size: 16px;
}
.button {
		width: 80%;
		height: 40px;
		background-color: #f8fdff;
		color: #000000;
		border: none;
		border-radius: 4px;
		font-size: 16px;
		transition: all 200ms;
}
.button:active {
		background-color: #ffffff;
		transition: all 200ms;
}
