
[alt] {
		max-width: 100%;
		margin-bottom: 20rpx;
}
.con-goods {
		display: flex;
}
.arc-body-item {
		-webkit-user-select: auto;
		   -moz-user-select: auto;
		        user-select: auto;
}
.body-user-like {
		background-color: #eaf4fd;
		color: #066be3;
		border-radius: 100rpx;
		text-align: center;
		height: 60rpx;
		width: 160rpx;
		padding-top: 10rpx;
		margin: auto;
		margin-left: 20rpx;
}
.body-user-des {
		margin-top: 10rpx;
		font-weight: 500;
		font-size: 26rpx;
		color: #494949;
		overflow: hidden;
		text-overflow: ellipsis;
		display: -webkit-box;
		-webkit-line-clamp: 1;
		-webkit-box-orient: vertical;
}
.body-user-name {
		margin-left: 20rpx;
		margin-top: 20rpx;
		font-weight: 600;
}
.body-user {
		margin: 30rpx 0;
		display: grid;
		grid-template-columns: 15% 60% 25%;
}
.body-user>.body-user-photo {
		margin-top: 20rpx;
		width: 80rpx;
}
.body-user>.body-user-photo>image {
		width: 85rpx;
		height: 85rpx;
		border-radius: 50%;
		border: black solid 3rpx;
}
.arc-body-all {
		padding: 30rpx 30rpx 100rpx 30rpx;
}
.body-title {
		font-size: 40rpx;
		font-weight: 600;
}
